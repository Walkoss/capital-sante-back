{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "ES2015"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "inlineSources": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "outDir": "dist",
    "allowJs": true
  },
  "files": [
    "src/**/*.ts",
    "gulp/**/*.ts"
  ]
}
